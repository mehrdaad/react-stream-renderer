{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:example": "babel ./example/src --out-dir ./example/build --extensions '.js,.ts,.tsx' --config-file=./babel.config.js",
    "build:source": "lerna exec --parallel \"babel src --out-dir build --extensions '.js,.ts,.tsx' --ignore '**/__tests__/**' --source-maps --delete-dir-on-start --config-file=../../babel.config.js\"",
    "watch": "lerna exec --parallel \"babel src --out-dir build --extensions '.js,.ts,.tsx' --ignore '**/__tests__/**' --source-maps --delete-dir-on-start --config-file=../../babel.config.js --watch\"",
    "build:def": "lerna exec \"tsc --emitDeclarationOnly -p ./tsconfig.json --outDir ./build\"",
    "prepare": "yarn build:source && yarn build:def && yarn build:example",
    "typecheck": "lerna exec \"tsc --noEmit\"",
    "lint": "eslint --ext '.ts,.tsx' './packages'",
    "test": "jest",
    "publish": "lerna publish --skip-git",
    "docs": "docsify serve ./docs"
  },
  "dependencies": {
    "lerna": "^3.16.4",
    "react": "^16.9.0",
    "docsify-cli": "^4.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-typescript": "^7.3.3",
    "@babel/preset-react": "^7.0.0",
    "@callstack/eslint-config": "^7.0.0",
    "@types/jest": "^24.0.17",
    "@types/node": "^10.14.15",
    "@types/react": "^16.9.2",
    "@types/react-reconciler": "^0.18.0",
    "@types/shallowequal": "^1.1.1",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^24.8.0",
    "eslint": "^6.1.0",
    "jest": "^24.8.0",
    "typescript": "^3.5.3"
  }
}
