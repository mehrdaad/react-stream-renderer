{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2015",
    "lib": ["es2016"],
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "outDir": "build",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  },
  "exclude": [
    "./fixtures",
    "**/__tests__/**"
  ]
}